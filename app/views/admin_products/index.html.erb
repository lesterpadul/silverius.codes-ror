<div id="app_products">
    <!-- header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Product</h1>
        <a 
            href="javascript:void(0);"
            v-on:click="toggleProductModal()" 
            class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i>
            &nbsp;Create Product
        </a>
    </div>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="card">
                <div class="card-header">
                    Search
                </div>
                <div class="card-body">
                    <form action="">
                        <div class="mb-3">
                            <label class="form-label">Title</label>
                            <input 
                                type="text" 
                                class="form-control" 
                                name="title"
                                value="<%= params[:title] %>"
                                placeholder="">
                        </div>
                        <button
                            type="submit"
                            class="btn btn-sm btn-primary shadow-sm justify-content-end">
                            <i class="fas fa-search fa-sm text-white-50"></i>
                            &nbsp;Search!
                        </button>
                    </form>
                </div>
            </div>
            <hr>
            <div class="table-responsive">
                <div class="d-flex justify-content-center mb-4">
                    <%= will_paginate @products %>
                </div>

                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID#</th>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @products.each do |product| %>
                        <tr>
                            <td>Product #<%= product.id %></td>
                            <td><%= product.title %></td>
                            <td><%= product.content %></td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                    <button type="button" class="btn btn-secondary">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button type="button" class="btn btn-primary">
                                        <i class="fas fa-pen"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>

                <div class="d-flex justify-content-center mb-4">
                    <%= will_paginate @products %>
                </div>
            </div>
        </div>
    </div>

    <!-- product add modal -->
    <div 
        class="modal fade" 
        id="modal_product_details" 
        tabindex="-1" 
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
        data-bs-backdrop="static" 
        data-bs-keyboard="false" >
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create Product</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                    <div class="mb-3">
                        <label class="form-label">Title*</label>
                        <input 
                            type="email" 
                            class="form-control" 
                            id="txtEmail" 
                            v-model="product.title"
                            aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Content</label>
                        <textarea 
                            class="form-control" 
                            id="txtContent" 
                            v-model="product.content"
                            rows="10"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a 
                        v-on:click="createNewProduct(this)"
                        class="btn btn-primary" 
                        href="javascript:void(0);">Create</a>
                </div>
            </div>
        </div>
    </div>
</div>
